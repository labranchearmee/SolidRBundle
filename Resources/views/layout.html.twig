<!doctype html>
<!--[if lt IE 8]> <html class="no-js ie7 oldie" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
<!--[if IE 9]>    <html class="no-js ie9 oldie" lang="en"> <![endif]-->
<!--[if gt IE 9]><!-->   <html xmlns:fb="http://www.facebook.com/2008/fbml" class="no-js" lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>{% block title %}{% endblock %} | {{ 'solidr.name'|trans }}</title>
	<meta name="description" content="{{ 'solidr.description'|trans }}">
	<meta name="author" content="Brickstorm.org">

  {# og #}
  <meta property="fb:app_id" content="422066694500806" />
  <meta property="og:title" content="{{ 'solidr.name'|trans }}" />
  <meta property="og:site_name" content="{{ 'solidr.name'|trans }}" />
  <meta property="og:locale:alternate" content="fr_FR" />
  <meta property="og:description" content="{{ 'solidr.description'|trans }}" />
  <meta property="og:image" content="?" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="{{ 'solidr.url'|trans }}" />

  {# responsive #}
	<meta name="viewport" content="width=device-width,initial-scale=1">

  {# css #}
  {% stylesheets
      '@BrickstormSolidRBundle/Resources/public/bootstrap/css/bootstrap.min.css'
      '@BrickstormSolidRBundle/Resources/public/bootstrap/css/bootstrap-responsive.min.css'
      '@BrickstormSolidRBundle/Resources/public/initializr-bootstrap/css/style.css'
      '@BrickstormSolidRBundle/Resources/public/style.css'
        filter='?yui_css'
        output='css/style.css'
        %}
      <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
  {% endstylesheets %}
  </head>

  <body>

    {% if form is defined %}
    {% form_theme form 'BrickstormFormBundle:Form:base.html.twig' %}
    {% endif %}

    {% include 'BrickstormSolidRBundle:Main:_navbar.html.twig' %}
    <div class="container">
    </div>
    {% block header %}
    {% endblock %}

    <div class="container">

      {% block content %}
      {% endblock %}

      <footer>
        <br>
        <br>
        <hr>
        <p align="center">
          <a title="{{ 'cgvu'|trans }}" href="{{ path('cgvu') }}">{{ 'cgvu'|trans }}</a> ~ 
          <a title="{{ 'contact.us'|trans }}" href="{{ path('contact_us') }}">{{ 'contact.us'|trans }}</a> ~ 
          <a title="{{ 'join.us.h1'|trans }}" href="{{ path('join_us') }}">{{ 'join.us'|trans }}</a> ~ 
          <a title="API" href="{{ path('api_intro') }}">API</a>
        </p>
        <p class="brickstorm"><small>{{ 'powered.by'|trans }}</small> <span class="armedwing">{{ 'brickstorm'|trans }}</span></p>
      </footer>

    </div> <!-- /container -->


    {% javascripts
        '@BrickstormSolidRBundle/Resources/public/initializr-bootstrap/js/libs/jquery-1.7.1.min.js'
        '@BrickstormSolidRBundle/Resources/public/bootstrap/js/bootstrap.min.js'
        '@BrickstormFormBundle/Resources/public/js/form.js'
        '@BrickstormSolidRBundle/Resources/public/script.js'
        filter='?yui_js' 
        output='js/compiled/script.js'  %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-29589587-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
    
    <!--[if lt IE 7 ]>
    	<script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
    	<script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->

  </body>
</html>