{% extends 'BrickstormSolidRBundle::layout.html.twig' %}

{% block title %}{{ 'service.name'|trans }} - {{ 'page.title.home'|trans }}{% endblock %}


{% block content %}

<p class="alert">{{ 'home.intro.service'|trans }}<br/><br/>{{ 'home.intro.subscribe'|trans }}</p>

<h2>{{ 'current.projects'|trans }}</h2>

<br/>

<table class="table table-striped table-bordered table-condensed">
{% for project in projects %}
<tr>
<td>
  <h3>{{ project.name }}
    {% for area in project.areas %}
    <span class="label label-info">{{ area }}</span> &nbsp;
    {% endfor %}
  </h3>
  <p>{{ project.description }}</p>
  <p>{{ 'project.created.by'|trans }} {{ project.creator }} (<a href="{{ path('organization', {'id' : project.organization.id, 'slug' : project.organization.slug}) }}">{{ project.organization }}</a>)</p>
  <ul>
    {% for city in project.cities %}
    <li>{{ city }} ({{ city.province.country }}, {{ city.province.country.continent }})</li>
    {% endfor %}
  </ul>
  
  <a class="btn btn-large" href="{{ path('project', {'id' : project.id, 'slug' : project.slug}) }}">{{ 'see.project'|trans }} &raquo;</a>
</td>
</tr>
{% endfor %}
</table>



{% endblock %}