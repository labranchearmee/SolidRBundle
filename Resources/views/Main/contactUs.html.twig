{% extends 'BrickstormSolidRBundle::layout.html.twig' %}

{% block title %}{{ 'service.name'|trans }} - {{ 'page.title.contactus'|trans }}{% endblock %}


{% block content %}

<h1>{{ 'contact.us'|trans }}</h1>
<div class="row">
  <div class="span8 well">
    <form action="{{ path('contact_us') }}" method="post" {{ form_enctype(form) }}>
      {{ form_widget(form) }}
      <input type="submit" class="btn btn-info btn-large" value="{{ 'send'|trans }} &raquo;">
    </form>
  </div>
</div>
{% endblock %}