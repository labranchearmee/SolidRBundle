{% extends 'BrickstormSolidRBundle::layout.html.twig' %}

{% block title %}{{ project.name }} - {{ 'page.title.project'|trans }}{% endblock %}


{% block content %}

{% include 'BrickstormSolidRBundle:Project:_medias.html.twig' with {'project': project} %}


<div class="modal hide" id="modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>{{ 'send.money'|trans }}</h3>
  </div>
  <div class="modal-body"></div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">{{ 'close'|trans }}</a>
  </div>
</div>

<div class="main-col">
  {% include 'BrickstormSolidRBundle:Project:_header.html.twig' with {'project': project, 'map': map} %}
  
  <p><a class="btn" href="{{ path('project', {'id' : project.id, 'slug' : project.slug}) }}">{{ 'project.details'|trans }} &raquo;</a></p>
  
  <br/>
  <hr/>
  
  
  
  <h3>{{ 'i.participate'|trans }}</h3>
  <br/>
  <p class="alert alert-success">{{ 'i.participate.pitch'|trans }}</p>
  <br/>

  <table id="trigger-payment" data-modal-url="{{ path('payment_modal', {'id': project.id }) }}" class="table table-striped table-bordered table-condensed">
    <tr>
      <th>{{ 'choose.quantity'|trans }}</th>
      <th>{{ 'choose.occurrence'|trans }}</th>
    </tr>
    <tr>
      <td rowspan="5" style="vertical-align: middle;text-align: center;">
        <select name="quantity">
          <option value="1" selected>1</option>
          {% for i in range(1, project.quantityRemaining) %}
            <option value="{{ i }}">{{ i }}</option>
          {% endfor %}
        </select>
      </td>
      <td>
        <a class="pull-right btn" data-rythm="" href="#">{{ 'i.participate'|trans }} &raquo;</a>
        {{ 'participate.oneshot'|trans({'%cost%': project.unitCost}) }}
      </td>
    </tr>
    <tr>
      <td>
        <a class="pull-right btn btn-success" data-rythm="Y" href="#">{{ 'i.participate'|trans }} &raquo;</a>
        {{ 'participate.yearly'|trans({'%cost%': project.unitCost}) }}
      </td>
    </tr>
    <tr>
      <td>
        <a class="pull-right btn btn-success" data-rythm="M" href="#">{{ 'i.participate'|trans }} &raquo;</a>
        {{ 'participate.monthly'|trans({'%cost%': project.unitCost}) }}
      </td>
    </tr>
    <tr>
      <td>
        <a class="pull-right btn btn-success" data-rythm="W" href="#">{{ 'i.participate'|trans }} &raquo;</a>
        {{ 'participate.weekly'|trans({'%cost%': project.unitCost}) }}
      </td>
    </tr>
    <tr>
      <td>
        <a class="pull-right btn btn-warning" data-rythm="D" href="#">{{ 'i.participate'|trans }} &raquo;</a>
        {{ 'participate.daily'|trans({'%cost%': project.unitCost}) }}
      </td>
    </tr>
  </table>
</div>

{% endblock %}